<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityFragment" >

    <ProgressBar
        android:id="@+id/pb_loading_indicator"
        android:layout_height="42dp"
        android:layout_width="42dp"
        android:layout_gravity="center"
        />

    <GridView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/movies_gv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:numColumns="auto_fit"
        android:columnWidth="@dimen/activity_main_gridview_column_width_w185"
        android:verticalSpacing="@dimen/activity_main_gridview_vertical_spacing"
        android:horizontalSpacing="@dimen/activity_main_gridview_horizontal_spacing"
        android:stretchMode="none"
        android:padding="0dp"
        android:gravity="center_vertical|center_horizontal"/>
</FrameLayout>